{
    "id": "org.xiphos.Xiphos",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "xiphos",
    "rename-desktop-file": "xiphos.desktop",
    "rename-icon": "xiphos",
    "rename-appdata-file": "xiphos.appdata.xml",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--persist=.sword",
        "--persist=.xiphos",
        "--talk-name=org.gnome.GConf"
    ],
    "cleanup": [
        "/include",
        "*.a",
        "*.la",
        "/lib/pkgconfig",
        "/share/gtk-doc",
        "/share/pkgconfig"
    ],
    "modules": [
        "shared-modules/intltool/intltool-0.51.json",
        "shared-modules/dbus-glib/dbus-glib.json",
        "shared-modules/python2.7/python-2.7.json",
        "shared-modules/libsoup/libsoup-2.4.json",
        {
            "name": "python2-libxml2",
            "config-opts": [
                "--with-python=python2"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "ftp://xmlsoft.org/libxml2/libxml2-2.9.12.tar.gz",
                    "sha256": "c8d6681e38c56f172892c85ddc0852e1fd4b53b4209e7f4ebf17f7e2eae71d92"
                }
            ]
        },
        {
            "name": "libgsf",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgsf/1.14/libgsf-1.14.47.tar.xz",
                    "sha256": "d188ebd3787b5375a8fd38ee6f761a2007de5e98fa0cf5623f271daa67ba774d"
                }
            ]
        },
        {
            "name": "gconf",
            "cleanup": [
                "/bin",
                "/share/aclocal"
            ],
            "config-opts": [
                "--disable-static",
                "--disable-gtk-doc",
                "--disable-orbit",
                "--disable-introspection"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/GConf/3.2/GConf-3.2.6.tar.xz",
                    "sha256": "1912b91803ab09a5eed34d364bf09fe3a2a9c96751fde03a4e0cfa51a04d784c"
                }
            ]
        },
        {
            "name": "biblesync",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/karlkleinpaste/biblesync/releases/download/1.2.0/biblesync-1.2.0.tar.gz",
                    "sha256": "3c94f0de9e85a3564fbea7c36acfe175462d424eefbbad929cb3bc520e6a229f"
                }
            ]
        },
        {
            "name": "sword",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "http://crosswire.org/ftpmirror/pub/sword/source/v1.8/sword-1.8.1.tar.gz",
                    "sha256": "ce9aa8f721a737f406115d35ff438bd07c829fce1605f0d6dcdabc4318bc5e93"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/sword-1.8.1-icu61.diff"
                    ]
                }
            ]
        },
        {
            "name": "rarian",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin"
            ],
            "rm-configure": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://rarian.freedesktop.org/Releases/rarian-0.8.1.tar.bz2",
                    "sha256": "aafe886d46e467eb3414e91fa9e42955bd4b618c3e19c42c773026b205a84577"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "cp -p /usr/share/automake-*/config.{sub,guess} .",
                        "autoconf -f -B build/autoconf_prepend-include"
                    ]
                }
            ]
        },
        {
            "name": "gnome-doc-utils",
            "cleanup": [
                "*"
            ],
            "rm-configure": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnome.org/pub/GNOME/sources/gnome-doc-utils/0.20/gnome-doc-utils-0.20.10.tar.xz",
                    "sha256": "cb0639ffa9550b6ddf3b62f3b1add92fb92ab4690d351f2353cffe668be8c4a6"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "cp -p /usr/share/automake-*/config.{sub,guess} .",
                        "autoconf -f -B build/autoconf_prepend-include"
                    ]
                }
            ]
        },
        {
            "name": "libgtkhtml4",
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnome.org/pub/GNOME/sources/gtkhtml/4.10/gtkhtml-4.10.0.tar.xz",
                    "sha256": "ca3b6424fb2c7ac5d9cb8fdafb69318fa2e825c9cf6ed17d1e38d9b29e5606c3"
                }
            ],
            "modules": [
                {
                    "name": "enchant",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/AbiWord/enchant/releases/download/enchant-1-6-1/enchant-1.6.1.tar.gz",
                            "sha256": "bef0d9c0fef2e4e8746956b68e4d6c6641f6b85bd2908d91731efb68eba9e3f5"
                        }
                    ]
                }
            ]
        },
        {
            "name": "minizip",
            "subdir": "contrib/minizip",
            "no-autogen": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://zlib.net/zlib-1.2.13.tar.gz",
                    "sha256": "b3a24de97a8fdbc835b9833169501030b8977031bcb54b3b3ac13740f846ab30"
                },
                {
                    "type": "script",
                    "dest": "contrib/minizip",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "unifdef",
            "no-autogen": true,
            "make-install-args": [
                "prefix=${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://dotat.at/prog/unifdef/unifdef-2.12.tar.xz",
                    "sha256": "43ce0f02ecdcdc723b2475575563ddb192e988c886d368260bc0a63aee3ac400"
                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "libjxl",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libjxl/libjxl.git",
                    "tag": "v0.9.1",
                    "commit": "b8ceae3a6e9d0ffd9efebcbdd04322fcfc502eed",
                    "disable-shallow-clone": true,
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "webkit2gtk-4.0",
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/share/gir-1.0",
                "*.a"
            ],
            "config-opts": [
                "-DPORT=GTK",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_BUBBLEWRAP_SANDBOX=OFF",
                "-DENABLE_DOCUMENTATION=OFF",
                "-DENABLE_GAMEPAD=OFF",
                "-DENABLE_WEBDRIVER=OFF",
                "-DUSE_SOUP2=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://webkitgtk.org/releases/webkitgtk-2.42.4.tar.xz",
                    "sha256": "52288b30bda22373442cecb86f9c9a569ad8d4769a1f97b352290ed92a67ed86",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://webkitgtk.org/releases/",
                        "version-pattern": "LATEST-STABLE-(\\d[\\.\\d]+\\d)",
                        "url-template": "https://webkitgtk.org/releases/webkitgtk-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "xiphos",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DGTKHTML=ON",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/crosswire/xiphos/releases/download/4.2.1/xiphos-4.2.1.tar.xz",
                    "sha256": "d34353f62224302c924757fca55ff0fc19f96815f20b893279ceef3d7d054128"
                },
                {
                    "type": "patch",
                    "path": "patches/xiphos-build.patch"
                }
            ]
        }
    ]
}
